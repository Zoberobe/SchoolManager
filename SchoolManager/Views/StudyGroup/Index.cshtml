@using X.PagedList.Mvc.Core;
@using X.PagedList;

@* Importante: O Model agora aponta para a ViewModel de StudyGroup *@
@model IPagedList<SchoolManager.Models.ViewModels.StudyGroupVM.IndexStudyGroupVM>

@{
    ViewData["Title"] = "Lista de Turmas";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5">
    
    <div class="card shadow-lg border-0">
        
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom">
            <div class="d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                    <i class="fas fa-chalkboard fs-5"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold text-dark">Turmas Cadastradas</h5>
                    <small class="text-muted">Gerencie professores, períodos e alunos</small>
                </div>
            </div>
            
            <a asp-action="Create" class="btn btn-primary fw-bold shadow-sm">
                <i class="fas fa-plus me-2"></i> Nova Turma
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th scope="col" class="ps-4 py-3" style="width: 30%;">Turma / Escola</th>
                            <th scope="col" class="py-3">Período</th>
                            <th scope="col" class="py-3">Professor</th>
                            <th scope="col" class="py-3">Alunos</th>
                            <th scope="col" class="text-end pe-4 py-3">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-light border d-flex justify-content-center align-items-center me-3 text-primary"
                                             style="width: 40px; height: 40px; min-width: 40px;">
                                            <i class="fas fa-layer-group"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.Name</div>
                                            <small class="text-muted" style="font-size: 0.8rem;">
                                                <i class="fas fa-school me-1"></i> @item.SchoolName
                                            </small>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex flex-column small">
                                        <span class="text-success mb-1">
                                            <i class="fas fa-play-circle me-1"></i> @item.InitialDate.ToShortDateString()
                                        </span>
                                        <span class="text-danger">
                                            <i class="fas fa-stop-circle me-1"></i> @item.FinalDate.ToShortDateString()
                                        </span>
                                    </div>
                                </td>

                                <td class="fw-semibold text-secondary">
                                    <i class="fas fa-chalkboard-teacher me-2 text-muted"></i>
                                    @item.TeacherName
                                </td>

                                <td>
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info rounded-pill px-3">
                                        <i class="fas fa-user-graduate me-1"></i> @item.StudentsCount
                                    </span>
                                </td>

                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">

                                        <a asp-controller="Student" asp-action="Create" asp-route-studyGroupUuid="@item.Uuid"
                                           class="btn btn-sm btn-success text-white" title="Matricular Aluno nesta Turma">
                                            <i class="fas fa-user-plus"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.Uuid" class="btn btn-sm btn-outline-warning" title="Editar">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Uuid" class="btn btn-sm btn-outline-info" title="Detalhes">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Uuid" class="btn btn-sm btn-outline-danger" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer bg-white py-3 border-top">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                
                <small class="text-muted mb-2 mb-md-0">
                    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
                </small>
                
                <nav aria-label="Navegação">
                    @Html.PagedListPager(
                        Model, 
                        page => Url.Action("Index", new { page = page }), 
                        new PagedListRenderOptions {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" },
                            UlElementClasses = new string[] { "pagination", "pagination-sm", "mb-0" },
                            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                            DisplayLinkToNextPage = PagedListDisplayMode.Always,
                            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
                            DisplayLinkToLastPage = PagedListDisplayMode.Never,
                            LinkToPreviousPageFormat = "<i class='fas fa-chevron-left'></i>",
                            LinkToNextPageFormat = "<i class='fas fa-chevron-right'></i>"
                        }
                    )
                </nav>
            </div>
        </div>
    </div>
</div>
