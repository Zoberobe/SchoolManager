@model SchoolManager.Models.ViewModels.StudyGroupVM.CreateStudyGroupVM
@using SchoolManager.Models.Enums

@{
    ViewData["Title"] = "Nova Turma";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-plus-circle me-2"></i>Criar Nova Turma</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create">

                <h6 class="text-primary border-bottom pb-2 mb-3">Definição da Turma</h6>
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="Grade" class="form-label fw-bold"></label>
                        <select asp-for="Grade" class="form-select" asp-items="Html.GetEnumSelectList<GradeLevel>()"></select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Section" class="form-label fw-bold"></label>
                        <select asp-for="Section" class="form-select" asp-items="Html.GetEnumSelectList<ClassSection>()"></select>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="Shift" class="form-label fw-bold"></label>
                        <select asp-for="Shift" class="form-select" asp-items="Html.GetEnumSelectList<SchoolShift>()"></select>
                    </div>
                </div>

                <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">Vínculos</h6>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="SchoolId" class="form-label fw-bold"></label>
                        <select asp-for="SchoolId" class="form-select" asp-items="Model.SchoolsList">
                            <option value="">-- Selecione uma Escola --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="TeacherId" class="form-label fw-bold"></label>
                        <select asp-for="TeacherId" class="form-select" asp-items="Model.TeachersList">
                            <option value="">-- Selecione um Professor --</option>
                        </select>
                    </div>
                </div>

                <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">Período Letivo</h6>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="InitialDate" class="form-label"></label>
                        <input asp-for="InitialDate" class="form-control" />
                        <span asp-validation-for="InitialDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FinalDate" class="form-label"></label>
                        <input asp-for="FinalDate" class="form-control" />
                        <span asp-validation-for="FinalDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success fw-bold">
                        <i class="fas fa-save me-2"></i>Salvar Turma
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            // Quando mudar a Escola...
            $("#SchoolId").change(function () {
                var schoolId = $(this).val();
                var teacherSelect = $("#TeacherId");

                // Limpa o dropdown de professores e mostra "Carregando..."
                teacherSelect.empty();
                teacherSelect.append('<option value="">Carregando...</option>');

                if (schoolId) {
                    // Faz a chamada ao Controller
                    $.ajax({
                        url: '@Url.Action("GetTeachersBySchool", "StudyGroup")',
                        type: 'GET',
                        data: { schoolId: schoolId },
                        success: function (data) {
                            teacherSelect.empty();
                            teacherSelect.append('<option value="">-- Selecione um Professor --</option>');

                            // Preenche com os dados recebidos (filtrados por escola e não deletados)
                            $.each(data, function (index, teacher) {
                                teacherSelect.append('<option value="' + teacher.id + '">' + teacher.name + '</option>');
                            });
                        },
                        error: function () {
                            alert('Erro ao carregar professores.');
                            teacherSelect.empty();
                            teacherSelect.append('<option value="">Erro ao carregar</option>');
                        }
                    });
                } else {
                    // Se não tiver escola selecionada, limpa tudo
                    teacherSelect.empty();
                    teacherSelect.append('<option value="">-- Selecione uma Escola primeiro --</option>');
                }
            });
        });
    </script>
}