@model SchoolManager.Models.ViewModels.StudyGroupVM.DeleteStudyGroupVM

@{
    ViewData["Title"] = "Excluir Grupo de Estudo";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 700px;">
        <div class="card-header bg-danger text-white d-flex align-items-center p-4"
             style="border-radius: 10px 10px 0 0; background: linear-gradient(45deg, #dc3545, #b02a37);">
            <div>
                <h3 class="mb-0 fw-bold">Excluir Grupo de Estudo</h3>
                <span class="opacity-75">Removendo o grupo: @Model.Name.</span>
            </div>
        </div>

        <div class="card-body p-4">

            <div class="alert alert-warning text-center border-0 bg-opacity-10 shadow-sm mb-4" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Tem certeza que deseja remover este registro?</strong>

            </div>

            <div class="row justify-content-center">
                <div class="col-md-11">

                    <div class="mb-4 border-bottom pb-2">
                        <label class="text-secondary small fw-bold text-uppercase">Grupo / Professor</label>
                        <div class="fs-4 fw-bold text-dark">
                            <i class="fas fa-users text-muted me-2"></i> @Html.DisplayFor(model => model.Name)
                        </div>
                        <div class="fs-6 text-muted mt-1">
                            <i class="fas fa-chalkboard-teacher me-2"></i> Professor: @Html.DisplayFor(model => model.TeacherName)
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-6 mb-3">
                            <label class="text-secondary small fw-bold text-uppercase">@Html.DisplayNameFor(model => model.InitialDate)</label>
                            <div class="fs-5 fw-bold text-dark mt-1">
                                <i class="fas fa-calendar-alt me-1"></i> @Model.InitialDate.ToShortDateString()
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="text-secondary small fw-bold text-uppercase">@Html.DisplayNameFor(model => model.FinalDate)</label>
                            <div class="fs-5 fw-bold text-dark mt-1">
                                <i class="far fa-calendar-alt me-1"></i> @Model.FinalDate.ToShortDateString()
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <label class="text-secondary small fw-bold text-uppercase">@Html.DisplayNameFor(model => model.StudentCount)</label>
                            <div class="fs-5 fw-bold text-dark mt-1">
                                <i class="fas fa-user-graduate me-1"></i> @Html.DisplayFor(model => model.StudentCount) alunos
                            </div>
                        </div>

                        <div class="col-6 mb-3">
                            <label class="text-secondary small fw-bold text-uppercase">@Html.DisplayNameFor(model => model.SchoolName)</label>
                            <div class="fs-5 fw-bold text-dark mt-1 text-nowrap overflow-hidden text-truncate" title="@Model.SchoolName">
                                <i class="fas fa-school me-1"></i> @Html.DisplayFor(model => model.SchoolName)
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <div class="card-footer bg-light p-3 d-flex justify-content-center gap-2" style="border-radius: 0 0 10px 10px;">
            <form asp-action="Delete" class="w-100 d-flex justify-content-center gap-2">
                <input type="hidden" asp-for="Uuid" name="id" />

                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-arrow-left me-1"></i> Cancelar
                </a>

                <button type="submit" class="btn btn-danger fw-bold px-4">
                    <i class="fas fa-trash-alt me-1"></i> Confirmar Exclusão
                </button>
            </form>
        </div>

    </div>
</div>