@model IEnumerable<SchoolManager.Models.ViewModels.SchoolVM.IndexSchoolVM>

@{
    ViewData["Title"] = "Lista de Escolas";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5">

    <div class="card shadow-lg border-0">

        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center border-bottom">

            <div class="d-flex align-items-center">
                <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex justify-content-center
                            align-items-center me-3" style="width: 45px; height: 45px;">
                    <i class="fas fa-school fs-5"></i>
                </div>
                <div>
                    <h5 class="mb-0 fw-bold text-dark">Escolas Cadastradas</h5>
                    <small class="text-muted">Gerencie as instituições de ensino</small>
                </div>
            </div>

            <a asp-action="Create" class="btn btn-primary fw-bold shadow-sm">
                <i class="fas fa-plus me-2"></i> Nova Escola
            </a>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-secondary small text-uppercase">
                        <tr>
                            <th class="ps-4 py-3">
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th class="py-3">
                                @Html.DisplayNameFor(model => model.City)
                            </th>
                            <th class="py-3 text-end pe-4">Ações</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-light border d-flex justify-content-center
                                                     align-items-center me-3 text-secondary"
                                                     style="width: 40px; height: 40px;">
                                            <i class="fas fa-building"></i>
                                        </div>
                                        <div>
                                            <span class="fw-bold text-dark">@Html.DisplayFor(modelItem => item.Name)</span>
                                        </div>
                                    </div>
                                </td>

                                <td class="fw-semibold text-dark">
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>

                                <td class="text-end pe-4">
                                    <div class="btn-group shadow-sm" role="group">

                                        <a asp-action="Edit"
                                           asp-route-uuid="@item.Uuid"
                                           class="btn btn-sm btn-outline-warning"
                                           title="Editar">
                                            <i class="fas fa-pen"></i>
                                        </a>

                                        <a asp-action="Details"
                                           asp-route-uuid="@item.Uuid"
                                           class="btn btn-sm btn-outline-info"
                                           title="Detalhes">
                                            <i class="fas fa-info-circle"></i>
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-uuid="@item.Uuid"
                                           class="btn btn-sm btn-outline-danger"
                                           title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    
    @if (!Model.Any())
    {
        <div class="alert alert-info mt-4 text-center" role="alert">
            Nenhuma escola cadastrada ainda. Use o botão "Nova Escola" para começar.
        </div>
    }

</div>