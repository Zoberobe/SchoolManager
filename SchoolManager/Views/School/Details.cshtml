@using SchoolManager.Models.ViewModels.SchoolVM
@model DetailsSchoolVM

@{
    ViewData["Title"] = "Detalhes da Escola";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-3" style="width: 100%; max-width: 700px;">

        <div class="card-header bg-primary text-white d-flex align-items-center p-4"
             style="border-radius: 10px 10px 0 0; background: linear-gradient(45deg, #0d6efd, #0a58ca);">

            <i class="fas fa-school fa-2x me-3"></i>
            <div>
                <h2 class="mb-0 fw-bold">@Model.Name</h2>
                <span class="opacity-75">
                    <i class="fas fa-info-circle me-1"></i> Detalhes da Instituição
                </span>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">

                <div class="col-md-12">
                    <h5 class="text-secondary mb-3 text-uppercase fs-6 fw-bold border-bottom pb-2">
                        <i class="fas fa-building me-1"></i> Informações da Escola
                    </h5>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold">Nome da Escola</label>
                        <div class="fs-5 text-dark">
                            <i class="fas fa-signature text-primary opacity-50 me-1"></i>
                            @Model.Name
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold">Cidade</label>
                        <div class="fs-5 text-dark">
                            <i class="fas fa-city text-primary opacity-50 me-1"></i>
                            @Model.City
                        </div>
                    </div>

                </div>

            </div>
        </div>

        <div class="card-footer bg-light p-3 d-flex justify-content-end gap-2"
             style="border-radius: 0 0 10px 10px;">

            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="fas fa-arrow-left me-1"></i> Voltar à Lista
            </a>

            <a asp-action="Edit" asp-route-uuid="@Model.Uuid" class="btn btn-warning fw-bold text-dark px-4">
                <i class="fas fa-pen me-1"></i> Editar
            </a>

            <a asp-action="Delete" asp-route-uuid="@Model.Uuid" class="btn btn-outline-danger px-4" title="Excluir Escola">
                <i class="fas fa-trash me-1"></i> Excluir
            </a>

        </div>

    </div>
</div>
