@using SchoolManager.Models.ViewModels.SchoolVM
@model CreateSchoolVM

@{
    ViewData["Title"] = "Cadastrar Escola";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-3" style="width: 100%; max-width: 750px;">

        <div class="card-header bg-success text-white d-flex align-items-center p-4"
             style="border-radius: 10px 10px 0 0; background: linear-gradient(45deg, #198754, #157347);">
            <i class="fas fa-school fa-2x me-3"></i>
            <div>
                <h2 class="mb-0 fw-bold">Cadastro de Escola</h2>
                <small class="opacity-75">Preencha as informações abaixo para registrar uma nova instituição.</small>
            </div>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create">

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <h5 class="text-secondary text-uppercase fs-6 fw-bold mb-3 border-bottom pb-2">
                    <i class="fas fa-building me-1"></i> Informações Principais
                </h5>

                <div class="row g-3">
                    <div class="col-12 mb-4">
                        <label asp-for="Name" class="form-label fw-bold text-muted small">Nome da Escola</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-signature"></i></span>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Ex: Escola Municipal Getúlio Vargas" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-12 mb-4">
                        <label asp-for="City" class="form-label fw-bold text-muted small">Cidade</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="fas fa-city"></i></span>
                            <input asp-for="City" class="form-control form-control-lg" placeholder="Ex: Rio de Janeiro" />
                        </div>
                        <span asp-validation-for="City" class="text-danger small"></span>
                    </div>

                    @if (Html.NameFor(model => model.CreatedAt) != null)
                    {
                        <div class="col-12 mb-4">
                            <label asp-for="CreatedAt" class="form-label fw-bold text-muted small">Data de Criação</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-calendar-alt"></i></span>
                                <input asp-for="CreatedAt" type="date" class="form-control form-control-lg" />
                            </div>
                            <span asp-validation-for="CreatedAt" class="text-danger small"></span>
                        </div>
                    }

                </div>

                <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="fas fa-times me-1"></i> Cancelar
                    </a>

                    <button type="submit" class="btn btn-success fw-bold px-5">
                        <i class="fas fa-check me-1"></i> Cadastrar
                    </button>
                </div>

            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}