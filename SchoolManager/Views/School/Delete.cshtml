@using SchoolManager.Models.ViewModels.SchoolVM
@model DeleteSchoolVM

@{
    ViewData["Title"] = "Excluir Escola";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-3" style="width: 100%; max-width: 800px;">

        <div class="card-header bg-danger text-white d-flex align-items-center p-4"
             style="border-radius: 10px 10px 0 0; background: linear-gradient(45deg, #dc3545, #b02a37);">

            <div>
                <h2 class="mb-0 fw-bold">
                    <i class="fas fa-exclamation-triangle me-2"></i> Excluir Escola
                </h2>
                <span class="opacity-75">Confirmação necessária</span>
            </div>
        </div>

        <div class="card-body p-4">
            <p class="text-dark fs-5 mb-4">
                Tem certeza de que deseja excluir a escola @Model.Name?
                Esta ação é irreversível.
            </p>

            <div class="row g-4">

                <div class="col-md-12">
                    <h5 class="text-secondary mb-3 text-uppercase fs-6 fw-bold border-bottom pb-2">
                        <i class="fas fa-building me-1"></i> Informações da Escola
                    </h5>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold">Nome</label>
                        <div class="fs-5 text-dark">
                            @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold">Cidade</label>
                        <div class="fs-5 text-dark">
                            <i class="fas fa-city text-danger opacity-50 me-1"></i>
                            @Html.DisplayFor(model => model.City)
                        </div>
                    </div>

                </div>

            </div>
        </div>

        <div class="card-footer bg-light p-3 d-flex justify-content-end gap-2"
             style="border-radius: 0 0 10px 10px;">

            <form asp-action="DeleteConfirmed" method="post" class="d-inline">

                <input type="hidden" asp-for="Uuid" />

                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-arrow-left me-1"></i> Cancelar
                </a>

                <button type="submit" class="btn btn-danger fw-bold px-4">
                    <i class="fas fa-trash me-1"></i> Excluir Permanentemente
                </button>
            </form>

        </div>

    </div>
</div>