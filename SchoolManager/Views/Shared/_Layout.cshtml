<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManager</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolManager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header class="p-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">

                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
                    
                    <span class="fs-4"><i class="bi bi-building"></i> School Manager</span>
                </a>

                <div class="col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0"></div>

                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a asp-controller="Home" asp-action="Index" class="nav-link active" aria-current="page">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Administrator" asp-action="Index" class="nav-link">Administrador</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="School" asp-action="Index" class="nav-link">Escola</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Teacher" asp-action="Index" class="nav-link">Professor</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="StudyGroup" asp-action="Index" class="nav-link">Turmas</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Student" asp-action="Index" class="nav-link">Alunos</a>
                    </li>
                </ul>

            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SchoolManager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
                $(document).ready(function() {
            
            var currentPath = window.location.pathname.toLocaleLowerCase('pt-BR');

            $('ul.nav-pills li a').each(function() {
                var $this = $(this);
                var linkHref = $this.attr('href').toLocaleLowerCase('pt-BR');

                
                if (linkHref.length > 1 && currentPath.indexOf(linkHref) === 0) {
                    $('ul.nav-pills li a').removeClass('active'); 
                    $this.addClass('active'); 
                }
              
                else if (linkHref === "/" && currentPath === "/") {
                    $('ul.nav-pills li a').removeClass('active');
                    $this.addClass('active');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
