@model SchoolManager.ViewModels.StudentFormViewModel

@{
    ViewData["Title"] = "Excluir Estudante";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 600px;">

        <!-- CABEÇALHO: Alerta de Perigo -->
        <div class="card-header bg-danger text-white d-flex align-items-center p-4"
             style="border-radius: 10px 10px 0 0; background: linear-gradient(45deg, #dc3545, #b02a37);">
            <div>
                <h3 class="mb-0 fw-bold">Excluir Estudante</h3>
                <span class="opacity-75">Esta ação não poderá ser desfeita.</span>
            </div>
        </div>

        <div class="card-body p-4">

            <div class="alert alert-warning text-center border-0 bg-opacity-10 shadow-sm mb-4" role="alert">
                <i class="fas fa-question-circle me-2"></i>
                <strong>Tem a certeza que deseja remover este registo?</strong>
            </div>

            <div class="row justify-content-center">
                <div class="col-md-10">

                    <!-- NOME -->
                    <div class="mb-3 border-bottom pb-2">
                        <label class="text-secondary small fw-bold text-uppercase">Nome do Aluno</label>
                        <div class="fs-4 fw-bold text-dark">
                            <i class="fas fa-user text-muted me-2"></i> @Html.DisplayFor(model => model.Name)
                        </div>
                    </div>

                    <!-- FINANCEIRO (Resumo) -->
                    <div class="row mt-3">
                        <div class="col-6">
                            <label class="text-secondary small fw-bold text-uppercase">Bolsista?</label>
                            <div class="mt-1">
                                @if (Model.IsScholarshipRecipient)
                                {
                                    <span class="badge bg-success rounded-pill">
                                        <i class="fas fa-check me-1"></i> SIM
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary rounded-pill">
                                        <i class="fas fa-times me-1"></i> NÃO
                                    </span>
                                }
                            </div>
                        </div>
                        <div class="col-6">
                            <label class="text-secondary small fw-bold text-uppercase">Mensalidade</label>
                            <div class="fs-5 fw-bold text-dark mt-1">
                                @Html.DisplayFor(model => model.MonthlyFee)
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- RODAPÉ: Botões de Confirmação -->
        <div class="card-footer bg-light p-3 d-flex justify-content-center gap-2" style="border-radius: 0 0 10px 10px;">
            <form asp-action="Delete" class="w-100 d-flex justify-content-center gap-2">
                <input type="hidden" asp-for="Uuid" />

                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-arrow-left me-1"></i> Cancelar
                </a>

                <button type="submit" class="btn btn-danger fw-bold px-4">
                    <i class="fas fa-trash-alt me-1"></i> Confirmar Exclusão
                </button>
            </form>
        </div>

    </div>
</div>