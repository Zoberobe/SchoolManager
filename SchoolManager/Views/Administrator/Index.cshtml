@using SchoolManager.Models.ViewModels.AdministratorVM
@model IEnumerable<IndexAdministratorVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Capital)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uuid)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Capital)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uuid)
            </td>

            <td>
                <a asp-action="Edit" asp-route-uuid="@item.Uuid">Edit</a> |
                <a asp-action="Details" asp-route-uuid="@item.Uuid">Details</a> |
                <a asp-action="Delete" asp-route-uuid="@item.Uuid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
