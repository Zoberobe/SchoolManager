@model SchoolManager.Models.ViewModels.TeacherVM.DetailsTeacherIVM

@{
    ViewData["Title"] = "Detalhes do Professor";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 900px;">

        <div class="card-header bg-info text-dark d-flex align-items-center p-4" style="border-radius: 10px 10px 0 0;">
            <i class="fas fa-chalkboard-teacher fa-2x me-3"></i>
            <div>
                <h3 class="mb-0 fw-bold">Detalhes do Professor</h3>
                <small class="text-dark opacity-75">Informações completas do professor.</small>
            </div>
        </div>

        <div class="card-body p-4">

            <h5 class="text-secondary text-uppercase fs-6 fw-bold mb-3 border-bottom pb-2">
                <i class="fas fa-id-card me-1"></i> Dados Pessoais
            </h5>

            <div class="mb-3">
                <label class="fw-bold text-muted small">Nome Completo</label>
                <p class="form-control bg-light">@Model.Name</p>
            </div>

            <h5 class="text-secondary text-uppercase fs-6 fw-bold mb-3 border-bottom pb-2 mt-4">
                <i class="fas fa-graduation-cap me-1"></i> Acadêmico
            </h5>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label class="fw-bold text-muted small">Matéria</label>
                    <p class="form-control bg-light">@Model.Matter</p>
                </div>

                <div class="col-md-6">
                    <label class="fw-bold text-muted small">Escola</label>
                    <p class="form-control bg-light">@Model.SchoolName</p>
                </div>
            </div>

            <h5 class="text-secondary text-uppercase fs-6 fw-bold mb-3 border-bottom pb-2 mt-4">
                <i class="fas fa-money-check-alt me-1"></i> Financeiro
            </h5>

            <div class="row">
                <div class="col-md-6">
                    <label class="fw-bold text-muted small">Salário (R$)</label>
                    <p class="form-control bg-light">R$ @Model.Salary.ToString("N2")</p>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                <a asp-action="Index" class="btn btn-outline-secondary px-4">
                    <i class="fas fa-arrow-left me-1"></i> Voltar
                </a>

                <a asp-action="Edit" asp-route-id="@Model.Uuid" class="btn btn-warning px-4">
                    <i class="fas fa-edit me-1"></i> Editar
                </a>
            </div>
        </div>
    </div>
</div>