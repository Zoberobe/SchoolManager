@model DetailsTeacherIVM

@{
    ViewData["Title"] = "Detalhes do Professor";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0" style="width: 100%; max-width: 800px;">

        <!-- CABEÇALHO: Nome -->
        <div class="card-header bg-primary text-white d-flex align-items-center p-4"
             style="border-radius: 10px 10px 0 0; background: linear-gradient(45deg, #0d6efd, #0a58ca);">
            <div>
                <h2 class="mb-0 fw-bold">@Model.Name</h2>
                <span class="opacity-75">
                    <i class="fas fa-chalkboard-teacher me-1"></i> Detalhes do Professor
                </span>
            </div>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">

                <!-- COLUNA 1: Dados pessoais -->
                <div class="col-md-6 border-end-md">
                    <h5 class="text-secondary mb-3 text-uppercase fs-6 fw-bold border-bottom pb-2">
                        <i class="fas fa-user me-1"></i> Informações Pessoais
                    </h5>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold">Nome</label>
                        <div class="fs-5 text-dark">
                            @Model.Name
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold">Data de Nascimento</label>
                        <div class="fs-5 text-dark">
                            <i class="fas fa-calendar-day text-primary opacity-50 me-1"></i>
                            @Html.DisplayFor(m => m.Birth)
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold">Escola</label>
                        <div class="fs-5 text-dark">
                            <i class="fas fa-school text-primary opacity-50 me-1"></i>
                            @Model.SchoolName
                        </div>
                    </div>
                </div>

                <!-- COLUNA 2: Materia e salário -->
                <div class="col-md-6 ps-md-4">
                    <h5 class="text-secondary mb-3 text-uppercase fs-6 fw-bold border-bottom pb-2">
                        <i class="fas fa-book me-1"></i> Informações Acadêmicas
                    </h5>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold">Matéria</label>
                        <div class="fs-5 text-dark">
                            <i class="fas fa-book-open text-primary opacity-50 me-1"></i>
                            @Model.Matter
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="text-muted small fw-bold d-block mb-1">Salário</label>
                        <div class="fs-3 fw-bold text-dark">
                            @Html.DisplayFor(m => m.Salary)
                        </div>
                        <small class="text-muted">Salário mensal</small>
                    </div>
                </div>

            </div>
        </div>

        <!-- RODAPÉ: Botões -->
        <div class="card-footer bg-light p-3 d-flex justify-content-end gap-2"
             style="border-radius: 0 0 10px 10px;">

            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                <i class="fas fa-arrow-left me-1"></i> Voltar
            </a>

            <a asp-action="Edit" asp-route-id="@Model.Uuid" class="btn btn-warning fw-bold text-dark px-4">
                <i class="fas fa-pen me-1"></i> Editar
            </a>
        </div>

    </div>
</div>
